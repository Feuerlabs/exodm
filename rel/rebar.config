%% -*- erlang -*-
{plugins, [exodm_rebar_plugin]}.
{plugin_dir, ["../util"]}.
%% {pa, "../ebin"}.
%% Name of the release target directory
{target, "lib/exodm"}.

%% Add the apps that need to be included in the generated release
%% There can be several rel_apps entries here. Each will be matched
{rel_apps, "exodm",
	    [kernel,stdlib,sasl,runtime_tools,compiler,
	     {inets,load}, {setup,load}, {exodm_setup, load}, {sext, load},
	     syntax_tools, lager, ale, public_key, crypto, bcrypt, ssl,
	     gproc, jobs, exo, yang, bert, reactor, lhttpc,
	     eleveldb, sqlite3, kvdb, {gettext,load}, {yaws,load},
%% 	     {simple_bridge,load},{nitrogen_core,load},{nprocreg,load},
	     {exosense_specs, load}, {exodm_plugin, load}, exodm_rpc, exodm_http,
	     %% exodm_ck3, exodm_web,
	     exodm_db,exodm
	    ]}.

{rel_apps, "exodm_web",
 [kernel, stdlib, sasl, runtime_tools,
  {inets, load}, {setup, load}, lager, ale,
  public_key, crypto, ssl, lhttpc, {gettext, load},
  {simple_bridge,load},{nitrogen_core,load},{nprocreg,load},
  exodm_http, exodm_web]}.
